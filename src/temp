global unsigned int GlobalX11Map[] = {
    XK_Home, XK_End, XK_KP_Divide, XK_KP_Multiply, XK_KP_Add, XK_KP_Subtract, XK_BackSpace, XK_Tab,
    XK_Return, XK_Linefeed, XK_Page_Up, XK_Page_Down,
